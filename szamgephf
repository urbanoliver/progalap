#include <stdio.h>
#include <stdlib.h>

int main()
{
    double a , b;
    char muvjel;
    printf("Kerem a muveletet: \n");

    scanf("%c", &muvjel);

    printf("Kerem a szamokat: \n");

    scanf("%lf , %lf", &a, &b);




    switch (muvjel){
        case '+': printf("%lf+%lf=%lf",a,b,a+b);break;

        case '-': printf("%lf-%lf=%lf",a,b,a-b);break;

        case '*': printf("%lf*%lf=%lf",a,b,a*b);break;

        case '/': printf("%.lf/%.lf=%lf",a,b,a/b);break;

        default:  printf("Error!");

    }

    return 0;
}

